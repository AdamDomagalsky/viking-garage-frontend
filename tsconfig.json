{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES5",
		"moduleResolution": "Node",
		"baseUrl": "src/ts",
		"declaration": false,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"removeComments": true,
		"sourceMap": true,
		"outDir": "ts-build",
		"jsx": "React"
	},
	"exclude": [
		"node_modules",
		"src/ts/**/*.spec.ts",
		"src/ts/**/*.spec.tsx"
	]
}
